@import "../global"
@import "../reset"

body
  background-color: dark-red

.wrapper
  width: 66%;
  min-width: 320px;
  margin: 0 auto;
  height: 100%;
  background-color: white;

.app
  float: left;
  height: 100%;
  width: calc(100% - 156px);

.content
  width: 100%;
  margin-top: 40px;
  height: 66%;
  border-top: 10px black solid;
  border-bottom: 10px black solid;

.card
  width: 100%;
  height: 100%;

.card-video
  width: 80%;

.card-selected
  width: 80%;

.left-pad
  float: left;
  width: 78px;
  height: 100%;
  border-right: 4px gray solid;
  background: url('../img/filmside.png') repeat-y top left;

.right-pad
  float: right;
  width: 78px;
  height: 100%;
  border-left: 4px gray solid;
  background: url('../img/filmside.png') repeat-y top right;

.clear-fix
  clear: both;