@import "../global"
@import "../reset"

body
  background-color dark-red
  overflow hidden
  font-family BebasNeue

.access-token
  display none

.overlay
  background black
  background-color rgba(0,0,0,0.7)
  position absolute
  overflow auto
  width 100%
  height 100%
  z-index 9999999

  .exit-button
    position fixed
    top 0
    right 0
    margin 10px
    width 70px
    height 70px
    svg
      fill white
      width 100%
      height 100%

  .thumb
    float left
    display inline-block
    width 300px
    margin 35px
    height 450px

.profile
  @media phone
    .profile-picture
      border 3px solid white
    border-radius 7px
  z-index 1000
  position absolute
  top 0
  right 0
  margin 20px

  img.profile-picture
    border-radius 5px

.film-area
  position relative
  width 1000px
  max-width 100%
  margin 0 auto
  height 100%

  .film-roll
    position absolute
    width 100%
    height 100%
    top -100%

    .frame
      height 100%
      width 100%
      background-color white
      border 10px solid black

      .card-area, .pad-left, .pad-right
        display inline-block
        float left
        height 100%

      padWidth = 50px
      .pad-left
        width padWidth
        background url('../img/filmside.png') left
        background-repeat repeat-y
        background-size contain
      .pad-right
        width padWidth
        background url('../img/filmside.png') right
        background-repeat repeat-y
        background-size contain

      .card-area
        position relative
        width 'calc(100% - %s)' % (padWidth * 2)
        .details
          height 100%
          .top-area
            padding 20px
            .title
              padding 20px
              text-align center
              @media phone
                font-size 20px
            .friends-that-like
              @media phone
                display none
              width calc(50% - 20px)
              float left
              .friend
                display inline-block
              input, input:active
                padding 20px
                background black
                color white
                border none
                font-size 1.2em
              li
                margin-top 10px
                font-size 1.1em
              li:hover
                cursor pointer
            .make-event
              @media phone
                width 100%
                padding 0
              width 50%
              padding-left 20px
              float right
              input, input:active
                @media phone
                  width 100%
                padding 20px
                background black
                color white
                border none
                font-size 1.2em
              button
                @media phone
                  margin 0
                  width 100%
                margin-left 10px
            .event-link
              opacity 0
        .button-area
          position absolute
          bottom -2px
          width 100%
          height 150px
          @media phone
            height 50px
          button
            background-color black
            padding 0
            width 50%
            height 100%
            cursor pointer
            transition background-color transition-speed, fill transition-speed
            fill white
            &.full
              width 100%
            &:not(.dislike):hover
              fill green
            &.dislike:hover
              fill light-red
            svg
              width 50%
              height 100%
        .summary
          padding 10px
          color gray
          font-size 20px
          max-height 300px
          overflow hidden
          text-overflow hidden
          line-height 1.5
          letter-spacing 1px
        .video
          .title
            width 100%
            display block
            text-align center
            padding 20px
          .video-player
            width 100%
            height 500px
            background gray
            margin 0 auto
            margin-top 10px

        @media phone
          .video
            .title
              font-size 20px
            .video-player
              height 300px

          .summary
            display none

.btn-dark
  background-color gray
  display inline-block
  padding 20px
  font-size 1.2em
  color white
  font-family BebasNeue

.btn-dark:hover
  cursor pointer
