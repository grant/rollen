.liked-card-icon
h2(data-bind="text: title")
.friends-that-like
    h3 friends who like this
    .friends(data-bind="foreach: friends")
        .friend
            img(data-bind="attr: {src: photoURL}")
.make-event
    h3 create movie night event
    div(data-bind="visible: !eventCreated()")
        input.event-name(data-bind="value: $root.makeEventName" placeholder="Event name")
        button.btn-dark.make-event-button(data-bind="click: $root.onCreateEvent") go
    div(data-bind="visible: eventCreated()")
        a(data-bind="attr: {href: eventPage}, text: eventPage")
.clearfix